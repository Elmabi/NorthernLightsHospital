        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="312,540,0,0" VerticalAlignment="Top" Width="98" Background="#FF2C69D3" Height="38" FontWeight="Bold" FontSize="14" Click="btnLogin_Click"/>
