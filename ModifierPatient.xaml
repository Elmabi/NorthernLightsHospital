        </Grid>
        <Grid HorizontalAlignment="Left" Height="55" Margin="413,294,0,0" VerticalAlignment="Top" Width="254" Background="#FFF5E4CC">
            <Image HorizontalAlignment="Left" Height="25" Margin="10,14,0,0" VerticalAlignment="Top" Width="25" Source="Images/icons8_guarantee_25px.png" Stretch="Fill"/>
            <ComboBox x:Name="cbAssurance" HorizontalAlignment="Left" Margin="56,14,0,0" Height="25" VerticalAlignment="Top" Width="165" BorderBrush="#FFF5E4CC">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFF5E4CC" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
        </Grid>
