        </Grid>
        <Button x:Name="btnModifier" Content="Modifier" HorizontalAlignment="Left" Margin="248,586,0,0" VerticalAlignment="Top" Width="241" Background="#FFF5E4CC" Height="52" FontWeight="Bold" FontSize="14"/>

        <Grid HorizontalAlignment="Left" Height="54" Margin="94,214,0,0" VerticalAlignment="Top" Width="254" Background="#FFF5E4CC">
            <Image HorizontalAlignment="Left" Height="25" Margin="10,14,0,0" VerticalAlignment="Top" Width="25" Source="Images/icons8_user_25px.png" Stretch="Fill"/>
            <TextBox x:Name="txtPrenom" HorizontalAlignment="Left" Height="23" Margin="52,16,0,0" TextWrapping="Wrap" Foreground="Gray" Text="Prénom" VerticalAlignment="Top" Width="182" BorderBrush="#FFF5E4CC" Background="#FFF5E4CC" FontSize="14" SelectionBrush="#FFF5E4CC"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="56" Margin="94,366,0,0" VerticalAlignment="Top" Width="254" Background="#FFF5E4CC">
            <Image HorizontalAlignment="Left" Height="25" Margin="10,14,0,0" VerticalAlignment="Top" Width="25" Source="Images/icons8_apartment_25px.png" Stretch="Fill"/>
            <TextBox x:Name="txtAdresse" HorizontalAlignment="Left" Height="23" Margin="52,16,0,0" TextWrapping="Wrap" Foreground="Gray" Text="Adresse" VerticalAlignment="Top" Width="192" BorderBrush="#FFF5E4CC" Background="#FFF5E4CC" FontSize="14" SelectionBrush="#FFF5E4CC"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="56" Margin="94,444,0,0" VerticalAlignment="Top" Width="254" Background="#FFF5E4CC">
            <Image HorizontalAlignment="Left" Height="25" Margin="10,14,0,0" VerticalAlignment="Top" Width="25" Source="Images/icons8_map_25px.png" Stretch="Fill"/>
            <ComboBox x:Name="cbProvince" HorizontalAlignment="Left" Margin="56,14,0,0" Height="25" VerticalAlignment="Top" Width="165" BorderBrush="#FFF5E4CC">
