        <Grid HorizontalAlignment="Left" Height="55" Margin="413,142,0,0" VerticalAlignment="Top" Width="254" Background="#FFF5E4CC">
            <Image HorizontalAlignment="Left" Height="25" Margin="10,14,0,0" VerticalAlignment="Top" Width="25" Source="Images/icons8_apartment_25px.png" Stretch="Fill"/>
            <TextBox x:Name="txtCodePostal" HorizontalAlignment="Left" Height="23" Margin="52,16,0,0" TextWrapping="Wrap" Foreground="Gray" Text="Code Postal" VerticalAlignment="Top" Width="192" BorderBrush="#FFF5E4CC" Background="#FFF5E4CC" FontSize="14" SelectionBrush="#FFF5E4CC"/>
