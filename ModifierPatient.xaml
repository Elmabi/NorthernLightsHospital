                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFF5E4CC" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="55" Margin="413,69,0,0" VerticalAlignment="Top" Width="254" Background="#FFF5E4CC">
